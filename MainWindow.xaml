<Window x:Class="Cleo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cleo"
        Height="600"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Deactivated="Window_Deactivated"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.95" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Fade Out Animation -->
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.15"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Semi-transparent background -->
        <Rectangle Fill="Black" Opacity="0.5"/>

        <!-- Main Container -->
        <Border x:Name="MainBorder"
                Background="{StaticResource BackgroundColor}"
                CornerRadius="15"
                Width="700"
                Height="500"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect BlurRadius="30"
                                  ShadowDepth="0"
                                  Color="Black"
                                  Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box Area -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceColor}"
                        CornerRadius="15,15,0,0"
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Path Grid.Column="0"
                              Width="20" Height="20"
                              Stretch="Uniform"
                              Fill="{StaticResource SubtleTextColor}"
                              Data="M21,21L15.5,15.5M17,10A7,7 0 0,1 10,17A7,7 0 0,1 3,10A7,7 0 0,1 10,3A7,7 0 0,1 17,10Z"/>

                        <!-- Input TextBox -->
                        <TextBox x:Name="InputTextBox"
                                Grid.Column="1"
                                Margin="15,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource TextColor}"
                                FontSize="18"
                                FontFamily="{StaticResource MainFont}"
                                VerticalAlignment="Center"
                                TextChanged="InputTextBox_TextChanged"
                                KeyDown="InputTextBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                    <TextBlock x:Name="Placeholder"
                                                             Text="Ask Cleo anything..."
                                                             Foreground="{StaticResource SubtleTextColor}"
                                                             FontSize="18"
                                                             IsHitTestVisible="False"
                                                             Visibility="Collapsed"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Voice Input Button -->
                        <Button x:Name="VoiceButton"
                                Grid.Column="2"
                                Width="40" Height="40"
                                Style="{StaticResource ModernButton}"
                                Click="VoiceButton_Click">
                            <Path Width="20" Height="20"
                                  Stretch="Uniform"
                                  Fill="{StaticResource TextColor}"
                                  Data="M12,2A3,3 0 0,1 15,5V11A3,3 0 0,1 12,14A3,3 0 0,1 9,11V5A3,3 0 0,1 12,2M19,11C19,14.53 16.39,17.44 13,17.93V21H11V17.93C7.61,17.44 5,14.53 5,11H7A5,5 0 0,0 12,16A5,5 0 0,0 17,11H19Z"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Response Area -->
                <ScrollViewer x:Name="ResponseScrollViewer"
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            Padding="20">
                    <StackPanel x:Name="ResponsePanel">
                        <!-- Welcome Message -->
                        <TextBlock Text="Hi! I'm Cleo, your AI assistant."
                                 Foreground="{StaticResource TextColor}"
                                 FontSize="16"
                                 TextWrapping="Wrap"
                                 Margin="0,20,0,10"/>
                        <TextBlock Text="Type or speak your question, and I'll help you out!"
                                 Foreground="{StaticResource SubtleTextColor}"
                                 FontSize="14"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Status Bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource SurfaceColor}"
                        CornerRadius="0,0,15,15"
                        Padding="20,10">
                    <Grid>
                        <TextBlock x:Name="StatusText"
                                 Text="Ready"
                                 Foreground="{StaticResource SubtleTextColor}"
                                 FontSize="12"
                                 HorizontalAlignment="Left"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Ctrl+Space to show â€¢ ESC to hide"
                                     Foreground="{StaticResource SubtleTextColor}"
                                     FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Loading Indicator -->
                <Grid x:Name="LoadingIndicator"
                      Grid.Row="1"
                      Visibility="Collapsed">
                    <Rectangle Fill="{StaticResource BackgroundColor}" Opacity="0.8"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                   Width="200" Height="4"
                                   Foreground="{StaticResource PrimaryColor}"/>
                        <TextBlock Text="Thinking..."
                                 Foreground="{StaticResource TextColor}"
                                 HorizontalAlignment="Center"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
